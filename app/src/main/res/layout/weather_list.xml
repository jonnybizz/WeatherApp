<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/nearby_city_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:padding="12dp">
        <TextView
            android:id="@+id/nearby_city_temp_degrees_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/degree_symbol"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/nearby_city_temp_tv"
            app:layout_constraintTop_toBottomOf="@+id/nearby_city_name_tv"
            app:layout_constraintTop_toTopOf="@id/nearby_city_temp_tv" />

        <TextView
            android:id="@+id/nearby_city_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/nearby_city_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/nearby_city_temp_tv"
            tools:text="Nearby Weather Description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="desc"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="36dp"
        android:text="temp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>